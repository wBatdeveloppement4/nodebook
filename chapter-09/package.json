    "npm-run-all": "^4.1.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^15.4.2",
    "react-proxy": "^1.1.8",
    "sassify": "^2.0.0",
    "sharp": "^0.17.2",
    "sharp-cli": "^1.6.0",
    "watchify": "^3.11.0",
    "whatwg-fetch": "^2.0.2"
  }
}
